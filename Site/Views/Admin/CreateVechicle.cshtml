@model Site.Models.Entities.Vechicle

@{
    ViewData["Title"] = "CreateVechicle";
    Layout = "_LayoutAdmin";
}

<h1>CreateVechicle</h1>

<h4>Vechicle</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Admin" asp-action="CreateVechicle" method="POST" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VechicleType" class="control-label"></label>
                    <select asp-for="VechicleType" class="form-select" asp-items="@Html.GetEnumSelectList<VechicleType>()"></select>
                    <span asp-validation-for="VechicleType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manufactured" class="control-label"></label>
                    <input asp-for="Manufactured" class="form-control" type="date" />
                    <span asp-validation-for="Manufactured" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VechicleState" class="control-label"></label>
                    <select asp-for="VechicleState" class="form-select" asp-items="@Html.GetEnumSelectList<VechicleState>()"></select>
                    <span asp-validation-for="VechicleState" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mileage" class="control-label"></label>
                    <input asp-for="Mileage" class="form-control" type="number" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-select" asp-items="@ViewBag.users"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <br/>
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupFile01">Upload</label>
                    <input type="file" class="form-control" id="inputGroupFile01" name="files">
                </div>
                <br/>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="CarIndex">Back to List</a>
</div>

