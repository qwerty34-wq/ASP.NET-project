@model Site.Models.Entities.VechicleUser

@{
    ViewData["Title"] = "ShowDetailsCar";
}

<br /><br /><br />
<h1>Show Details Car</h1>

<div>
    <h4>Vechicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vechicle.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vechicle.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vechicle.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vechicle.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vechicle.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vechicle.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vechicle.VechicleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vechicle.VechicleType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vechicle.Manufactured)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vechicle.Manufactured)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vechicle.VechicleState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vechicle.VechicleState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vechicle.Mileage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vechicle.Mileage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vechicle.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vechicle.Price)
        </dd>
        @if (Model.Vechicle.UserId != default)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Surname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Surname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Country)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                User
            </dt>
            <dd class="col-sm-10">
                No User
            </dd>
        }

    </dl>
</div>
<div>
    <a asp-action="Index">Go Back</a>
</div>
